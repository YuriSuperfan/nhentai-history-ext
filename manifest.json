{
  "manifest_version": 3,
  "name": "nhentai Reading History",
  "version": "3.2.1",
  "description": "Record your reading history on nhentai.net and get statistics !",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://nhentai.net/*",
    "https://*.nhentai.net/*"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://nhentai.net/g/*/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content.css",
        "lib/dexie.js",
        "icons/icon32.png",
        "icons/icon128.png",
        "utils.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
